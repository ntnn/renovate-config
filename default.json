{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:best-practices",
    "workarounds:all",
    ":prImmediately",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":label(renovate)",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "pinDigests": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "bingo dependencies",
      "managerFilePatterns": [
        "/^.bingo\/[[:alnum:]-]+\.mod$/"
      ],
      "matchStrings": [
        "require (?<depName>.+) (?<currentValue>.*) \/\/"
      ],
      "datasourceTemplate": "golang"
    }
  ]
}
